<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/camera_action_bar_height"
    android:background="@drawable/bg_action_bar_camera"
    android:paddingStart="@dimen/camera_action_bar_padding_horizontal"
    android:paddingEnd="@dimen/camera_action_bar_padding_horizontal">

    <ImageView
        android:id="@+id/camera_close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/camera_action_button_padding"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_close"
        app:tint="@color/colorOnBackground" />

    <ImageView
        android:id="@+id/camera_flash_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/camera_action_button_padding"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_flash_selector" />

</androidx.constraintlayout.widget.ConstraintLayout>
