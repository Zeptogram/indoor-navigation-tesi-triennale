<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    android:padding="@dimen/screen_padding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".3">

        <ImageView
            android:layout_width="@dimen/no_location_img_size"
            android:layout_height="@dimen/no_location_img_size"
            android:src="@drawable/ic_no_location" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/no_location_title_margin_top"
            android:gravity="center"
            android:text="@string/no_location_title"
            android:textSize="@dimen/no_location_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/no_location_subtitle_margin_top"
            android:gravity="center"
            android:text="@string/no_location_subtitle"
            android:textSize="@dimen/no_location_subtitle" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/no_location__button_choose_map"
        style="@style/AppTheme.Button.Blue"
        android:text="@string/no_location_btn_title"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>